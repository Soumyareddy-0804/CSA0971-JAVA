public class CharacterSearch {
    public static void main(String[] args) {
        String str = "I am a programmer";
        char ch = 'p';
        boolean found = false;
        int index = -1;
        for (int i = 0; i < str.length(); i++) {
            if (str.charAt(i) == ch) {
                found = true;
                index = i;
                break; 
            }
        }
        if (found) {
            System.out.println(ch + " is found in the string at index: " + index);
        } else {
            System.out.println(ch + " is not found in the string");
        }
    }
}
