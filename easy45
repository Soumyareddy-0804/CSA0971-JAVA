public class SumOfDigits {
    public static void main(String[] args) {
        int N = 3; // Sample input
        int number = 143; // Sample input
        
        int sum = 0;
        
        while (N > 0 || number > 0) {
            sum += number % 10;
            number /= 10;
            N--;
        }
        
        if (sum > 9) {
            sum = sum % 9;
        }
        
        System.out.println("Sum of digits (single digit): " + sum);
    }
}
